@model Booker.PageModel

<div class="container-fluid sidebar">
	@{
		var pages = Model.Children??Model.Up.Children;
		var sec = Model.Children != null?Model:Model.Up??Model;
		var counter = sec.NumberChildrenFrom;

			<h5>@Raw(sec.EffectiveShortTitle)</h5>
			<ol start="@counter">
			@foreach (var page in pages) {
				if (page == Model)
				{
					<li class="sidebar"><a class="simplelink" href="@page.PageLink" id="section_page_@counter"> <b> @Raw(page.PageTitle) </b> </a> <br></li>
				}
				else
				{
					<li class="sidebar"><a class="backgroundlink" href="@page.PageLink" id="section_page_@counter"> @Raw(page.PageTitle) </a> <br></li>
				}
				counter++;
			}
			</ol>
	}
	<script>
		document.addEventListener('keyup', function(e) {
			if (e.key >= '1' && e.key <= '9') document.getElementById('section_page_'+e.key).click()
		}, false);
	</script>
	</p>
	<br>
	<h5>Navigation: (click or use arrow keys)</h5>
	<p>
	@{
		if (Model.EffectiveNext != null)
		{
			<a style="text-align: left;" class="simplelink" id="NextPage" href="@Model.EffectiveNext.PageLink"><b>Next:</b> @Raw(Model.EffectiveNext.EffectiveShortTitle)</a><br>
			<script>
				document.addEventListener('keyup', function(e) {
					if (e.getModifierState("Meta") || e.getModifierState("Control")) return
					if (e.key == 'ArrowRight' || e.key == "Return")
					  document.getElementById('NextPage').click()
				}, false);
			</script>
		}
		if (Model.EffectivePrevious != null)
		{
			<a style="text-align: left;" class="simplelink" id="PreviousPage" href="@Model.EffectivePrevious.PageLink"><b>Previous:</b> @Raw(Model.EffectivePrevious.EffectiveShortTitle)</a><br>
			<script>
				document.addEventListener('keyup', function(e) {
					if (e.getModifierState("Meta")) return
					if (e.key == 'ArrowLeft') 
						document.getElementById('PreviousPage').click()
				}, false);
			</script>
		}
		if (Model.Up != null)
		{
			<a style="text-align: left;" class="simplelink" id="UpPage" href="@Model.Up.PageLink"><b>Up:</b> @Raw(Model.Up.EffectiveShortTitle)</a><br>
			<script>
				document.addEventListener('keyup', function(e) {
					if (e.getModifierState("Meta")) return
					if (e.key == 'ArrowUp') document.getElementById(e.getModifierState("Control")?'linkToIndex':'UpPage').click()
				}, false);
			</script>
		}
		if (Model.NextSection != null)
		{
			<a style="text-align: left;" class="simplelink" id="NextSectionPage" href="@Model.NextSection.PageLink"><b>Next section:</b> @Raw(Model.NextSection.EffectiveShortTitle)</a><br>
			<script>
				document.addEventListener('keyup', function(e) {
					if (e.getModifierState("Meta")) return
					if (e.key == 'ArrowRight'  && e.getModifierState("Control")) document.getElementById('NextSectionPage').click()
				}, false);
			</script>
		}
		if (Model.PreviousSection != null)
		{
			<a style="text-align: left;" class="simplelink" id="PreviousSectionPage" href="@Model.PreviousSection.PageLink"><b>Previous section:</b> @Raw(Model.PreviousSection.EffectiveShortTitle)</a><br>
			<script>
				document.addEventListener('keyup', function(e) {
					if (e.getModifierState("Meta")) return
					if (e.key == 'ArrowLeft'  && e.getModifierState("Control")) document.getElementById('PreviousSectionPage').click()
				}, false);
			</script>
		}
	}
	</p>
	<div style="color: grey; padding-top: .5rem;">
		<a style="color: grey;" href="mailto:ian@northwestern.edu?subject=Comment on DPGD/@Model.PageLink">Send feedback on this page</a>
	</div>
</div>

